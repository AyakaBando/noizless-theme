  <div class="wishlist-container-title-bar">
    <div class="wishlist-main-title">私のお気に入り</div>
    <div class="user-login-status-btn">
      {% if customer %}
        <div>Debug: Customer is logged in</div>
        {{ customer.first_name }}
        {% if customer.email %}
          <div>{{ customer.email }}</div>
        {% endif %}
      {% else %}
